{
    "private": true,
    "name": "asmforge-ide",
    "version": "0.1.0",
    "description": "AsmForge IDE - AI-powered Assembly language IDE built on Eclipse Theia",
    "license": "MIT",
    "author": "AsmForge Team",
    "homepage": "https://github.com/asmforge-ide",
    "repository": {
        "type": "git",
        "url": "https://github.com/asmforge-ide/asmforge.git"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    },
    "workspaces": [
        "packages/*",
        "browser-app",
        "electron-app"
    ],
    "scripts": {
        "clean": "npm run clean --workspaces --if-present && rimraf plugins",
        "build": "npm run build --workspace=browser-app",
        "build:electron": "npm run build --workspace=electron-app",
        "build:all": "npm run build --workspaces --if-present",
        "watch": "npm run watch --workspace=browser-app",
        "start": "npm run start --workspace=browser-app",
        "start:electron": "npm run start --workspace=electron-app",
        "package:electron": "npm run package --workspace=electron-app",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "npm run lint -- --fix",
        "test": "npm run test --workspaces --if-present"
    },
    "devDependencies": {
        "@eslint/js": "^9.0.0",
        "@types/node": "^20.10.0",
        "eslint": "^9.0.0",
        "eslint-config-prettier": "^9.1.0",
        "prettier": "^3.2.0",
        "rimraf": "^5.0.5",
        "typescript": "~5.3.3",
        "typescript-eslint": "^8.0.0",
        "webpack": "^5.104.1",
        "webpack-cli": "^5.1.4"
    },
    "theiaPluginsDir": "plugins",
    "theiaPlugins": {
        "vscode-builtin-extensions-pack": "https://open-vsx.org/api/AntGrpOPEN/vscode-builtin-extensions-pack/1.0.0/file/AntGrpOPEN.vscode-builtin-extensions-pack-1.0.0.vsix"
    },
    "overrides": {
        "@theia/core": "1.68.0",
        "@theia/editor": "1.68.0",
        "@theia/monaco": "1.68.0",
        "@theia/filesystem": "1.68.0",
        "@theia/task": "1.68.0",
        "@theia/debug": "1.68.0",
        "@theia/process": "1.68.0",
        "@theia/terminal": "1.68.0",
        "@theia/workspace": "1.68.0",
        "@theia/markers": "1.68.0",
        "@theia/output": "1.68.0",
        "@theia/preferences": "1.68.0",
        "@theia/variable-resolver": "1.68.0",
        "inversify": "6.2.2"
    }
}
